<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ticket</title>
  
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    @(Html.Kendo().Grid<iWasHere.Domain.Models.DictionaryTicketType>()
        .Name("grid")
        .Columns(columns =>
        {
            columns.Bound(c => c.TicketTypeId); 
            columns.Bound(c => c.TicketCode);
            columns.Bound(c => c.TicketName);
            
        })
    
        .HtmlAttributes(new { style = "height: 550px;" })
        .Scrollable()
        
        //< a href = "~/Views/Ticket/Ticket.cshtml" > ~/ Views / Ticket / Ticket.cshtml </ a >
        
        .Pageable(pageable => pageable
            .Refresh(true)
            .PageSizes(true)
            .ButtonCount(5)) 
        .Sortable()
        .DataSource(dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("TicketTypeRead", "Ticket"))
            .PageSize(20)
        )
          )


</body>
</html>
