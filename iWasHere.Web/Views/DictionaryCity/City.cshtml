@(Html.Kendo().Grid<iWasHere.Domain.Models.DictionaryCity>()
        .Name("CityGrid")
        .Filterable(ftb => ftb.Mode(GridFilterMode.Row))
        .Pageable()
        .Columns(columns =>
        {
            columns.Bound(c => c.CityId);
            columns.Bound(c => c.CityName);
            columns.Bound(c => c.CountyId);
        })
        .HtmlAttributes(new { style = "height: 550px;" })
        .Scrollable()
        .DataSource(dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("City_Read", "DictionaryCity"))
            .PageSize(20)
        )
)