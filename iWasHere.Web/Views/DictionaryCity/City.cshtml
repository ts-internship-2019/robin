@(Html.Kendo().Grid<iWasHere.Domain.Model.DictionaryCity>()
        .Name("CityGrid")
        .Columns(columns =>
        {
            columns.Bound(c => c.CityId);
            columns.Bound(c => c.CityName);
            columns.Bound(c => c.CountyId);
        })
        .HtmlAttributes(new { style = "height: 550px;" })
        .Scrollable()
        .Groupable()
        .Sortable()
        .Pageable(pageable => pageable
            .Refresh(true)
            .PageSizes(true)
            .ButtonCount(5))
        .DataSource(dataSource => dataSource
            .Ajax()
            //.Read(read => read.Action("Customers_Read", "Grid"))
            .PageSize(20)
        )
)