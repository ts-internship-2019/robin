@(Html.Kendo().Grid<iWasHere.Domain.Models.DictionaryCurrency>()
        .Name("CurrencyGrid")
        .Columns(columns =>
        {
            columns.Bound(c => c.CurrencyId);
            columns.Bound(c => c.CurrencyCode);
            columns.Bound(c => c.CurrencyName);
        })
        .HtmlAttributes(new { style = "height: 550px;" })
        .Scrollable()
        .Groupable()
        .Sortable()
        .DataSource(dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("Currency_Read", "DictionaryCurrency"))
            .PageSize(20)
        )
)