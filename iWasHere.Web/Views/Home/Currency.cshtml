@(Html.Kendo().Grid<iWasHere.Domain.Models.DictionaryCurrency>()
        .Name("CurrencyGrid")
        .Filterable(ftb => ftb.Mode(GridFilterMode.Row))
        .Pageable()
        .Columns(columns =>
        {
            columns.Bound(c => c.CurrencyId).Filterable(ftb => ftb.Cell(cell => cell.ShowOperators(false))).Width(225);
            columns.Bound(c => c.CurrencyCode).Width(500).Filterable(ftb => ftb.Cell(cell => cell.Operator("contains").SuggestionOperator(FilterType.Contains)));
            columns.Bound(c => c.CurrencyName).Width(500).Filterable(ftb => ftb.Cell(cell => cell.Operator("contains").SuggestionOperator(FilterType.Contains)));
        })
        .HtmlAttributes(new { style = "height: 550px;" })
        .Scrollable()
        .Groupable()
        .Sortable()
        .Filterable(ftb => ftb.Mode(GridFilterMode.Row))
        .DataSource(dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("Currency_Read", "DictionaryCurrency"))
            .PageSize(20)
        )
)